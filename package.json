{
  "name": "@campaign/root",
  "version": "0.1.0",
  "private": true,
  "description": "Campaign Management Tool - Monorepo Root",
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm -r --parallel dev",
    "dev:logged": "bash scripts/dev-all-with-logging.sh",
    "dev:api": "bash scripts/dev-with-logging.sh api",
    "dev:frontend": "bash scripts/dev-with-logging.sh frontend",
    "dev:rules-engine": "bash scripts/dev-with-logging.sh rules-engine",
    "dev:scheduler": "bash scripts/dev-with-logging.sh scheduler",
    "lint": "pnpm -r lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\"",
    "test": "pnpm -r test",
    "test:watch": "pnpm -r test:watch",
    "type-check": "pnpm -r type-check",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.29.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.4",
    "typescript": "^5.3.3"
  }
}
